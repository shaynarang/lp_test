<h1>Uploads</h1>
<% @uploads.each do |upload| %>
  <p id="upload_list_item">
    <%= link_to upload.file_name, upload_path(upload) %>
    <%= upload.created_at.strftime("%-m/%-d/%Y") %>
    <%= link_to "Edit", edit_upload_path(upload) %>
    <%= link_to "Download", download_upload_path(upload) %>
    <%= link_to "Delete", upload, :method => "delete", data: { confirm: 'Are you sure?' }%>
  </p>
<% end %>
<hr>
<p id="root_link"> <%= link_to "Upload Another File", root_path %> </p>